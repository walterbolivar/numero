#include "stdafx.h"
#include<iostream>
#include "conio.h"

using namespace std;

void main()

{int a,b,c,promedio;
 cout<<"ingresar a";
	 cin>> a;
 cout<<"ingrese b";
	 cin>> b;
 cout<<"ingrese c";
	 cin>> c;
	if (!((a>=0) && (a<=10)))
	 cout<<a<<"no esta en el rango";
	if (!((b>=0) && (b<=10)))
	 cout<<b<<"no esta en el rango";
	if (!((c>=0) && (c<=10)))
     cout<<c<<"no esta en el rango";
	if ((a>=0 && a<=10) && (b>=0 && b<=10) && (c>=0 && c<=10))
       {promedio=((a+b+c)/3);
        cout<<"el promedio es:"<<promedio<<endl;
	   }	 
	 
	 
	getch();
}
